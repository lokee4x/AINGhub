-- Load the Rayfield Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create the main window
local Window = Rayfield:CreateWindow({
    Name = "Glass Model Highlighter",
    LoadingTitle = "Loading UI...",
    LoadingSubtitle = "by lokee4x",
    ConfigurationSaving = {
        Enabled = false,
    },
    Discord = {
        Enabled = false,
    },
    KeySystem = false,
})

-- Create a tab and section
local Tab = Window:CreateTab("Glasses", 4483362458) -- Glass icon
local Section = Tab:CreateSection("Highlight Options")

-- Function to change model colors
local function changeModelColor(modelName, colorName)
    local model = workspace.Glasses:FindFirstChild(modelName)
    if model then
        for _, part in pairs(model:GetDescendants()) do
            if part:IsA("BasePart") then
                part.BrickColor = BrickColor.new(colorName)
            end
        end
        Rayfield:Notify({
            Title = "Success",
            Content = modelName .. " model highlighted with " .. colorName .. " color.",
            Duration = 5,
        })
    else
        Rayfield:Notify({
            Title = "Error",
            Content = "Model '" .. modelName .. "' not found.",
            Duration = 5,
        })
    end
end

-- Create a button to show the path
Tab:CreateButton({
    Name = "Show Path",
    Callback = function()
        changeModelColor("Wrong", "Terra Cotta")
        changeModelColor("Correct", "Dark stone grey") -- Ensure "Dark stone grey" is a valid BrickColor
    end,
})
