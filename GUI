-- üõ†Ô∏è Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- üé® UI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local MainFrame = Instance.new("Frame")
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
MainFrame.Size = UDim2.new(0, 200, 0, 100)
MainFrame.Position = UDim2.new(0.05, 0, 0.1, 0)
MainFrame.Active = true
MainFrame.Draggable = true

local Title = Instance.new("TextLabel")
Title.Parent = MainFrame
Title.Text = "AING ESP"
Title.Size = UDim2.new(1, 0, 0.3, 0)
Title.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 16

local ESPButton = Instance.new("TextButton")
ESPButton.Parent = MainFrame
ESPButton.Text = "ESP: OFF"
ESPButton.Size = UDim2.new(0.8, 0, 0.4, 0)
ESPButton.Position = UDim2.new(0.1, 0, 0.5, 0)
ESPButton.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
ESPButton.TextColor3 = Color3.fromRGB(255, 255, 255)

-- üéØ ESP Functionality
local espEnabled = false

local function createESP(player)
    if player == Players.LocalPlayer then return end  
    if not player.Character then return end
    local character = player.Character:FindFirstChild("HumanoidRootPart")
    if not character then return end

    local billboard = Instance.new("BillboardGui", character)
    billboard.Name = "ESP"
    billboard.Size = UDim2.new(0, 100, 0, 50)
    billboard.StudsOffset = Vector3.new(0, 3, 0)
    billboard.AlwaysOnTop = true

    local nameLabel = Instance.new("TextLabel", billboard)
    nameLabel.Size = UDim2.new(1, 0, 1, 0)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Text = player.Name
    nameLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
    nameLabel.TextScaled = true
end

local function removeESP(player)
    if player.Character then
        local esp = player.Character:FindFirstChild("ESP")
        if esp then
            esp:Destroy()
        end
    end
end

ESPButton.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    ESPButton.Text = espEnabled and "ESP: ON" or "ESP: OFF"
    ESPButton.BackgroundColor3 = espEnabled and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(150, 0, 0)

    if espEnabled then
        for _, player in pairs(Players:GetPlayers()) do
            createESP(player)
        end
        Players.PlayerAdded:Connect(createESP)
        Players.PlayerRemoving:Connect(removeESP)
    else
        for _, player in pairs(Players:GetPlayers()) do
            removeESP(player)
        end
    end
end)
