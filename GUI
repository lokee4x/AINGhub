-- Create UI
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player.PlayerGui)
gui.Name = "AING"
gui.ResetOnSpawn = false

-- Main Frame
local mainFrame = Instance.new("Frame", gui)
mainFrame.Size = UDim2.new(0, 400, 0, 250)
mainFrame.Position = UDim2.new(0.5, -200, 0.3, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 25, 50)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true

-- Dragging functionality
local dragging, dragInput, dragStart, startPos
local function updateInput(input)
    local delta = input.Position - dragStart
    mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

mainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

mainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        updateInput(input)
    end
end)

-- Top Bar
local topBar = Instance.new("Frame", mainFrame)
topBar.Size = UDim2.new(1, 0, 0, 30)
topBar.BackgroundColor3 = Color3.fromRGB(10, 15, 30)

local titleLabel = Instance.new("TextLabel", topBar)
titleLabel.Size = UDim2.new(1, -30, 1, 0)
titleLabel.Position = UDim2.new(0, 5, 0, 0)
titleLabel.Text = "AING"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 14
titleLabel.BackgroundTransparency = 1

local closeButton = Instance.new("TextButton", topBar)
closeButton.Size = UDim2.new(0, 30, 1, 0)
closeButton.Position = UDim2.new(1, -30, 0, 0)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 0, 0)
closeButton.BackgroundTransparency = 1
closeButton.MouseButton1Click:Connect(function()
    gui:Destroy()
end)

-- Sidebar
local sidebar = Instance.new("Frame", mainFrame)
sidebar.Size = UDim2.new(0, 100, 1, -30)
sidebar.Position = UDim2.new(0, 0, 0, 30)
sidebar.BackgroundColor3 = Color3.fromRGB(15, 20, 40)

local mainButton = Instance.new("TextButton", sidebar)
mainButton.Size = UDim2.new(1, 0, 0, 40)
mainButton.Text = "Main"
mainButton.TextColor3 = Color3.fromRGB(255, 255, 255)
mainButton.BackgroundColor3 = Color3.fromRGB(50, 50, 200)

local otherButton = Instance.new("TextButton", sidebar)
otherButton.Size = UDim2.new(1, 0, 0, 40)
otherButton.Position = UDim2.new(0, 0, 0, 45)
otherButton.Text = "Other"
otherButton.TextColor3 = Color3.fromRGB(255, 255, 255)
otherButton.BackgroundColor3 = Color3.fromRGB(100, 50, 200)

-- Content Area (Switchable)
local mainContent = Instance.new("Frame", mainFrame)
mainContent.Size = UDim2.new(1, -100, 1, -30)
mainContent.Position = UDim2.new(0, 100, 0, 30)
mainContent.BackgroundColor3 = Color3.fromRGB(30, 35, 60)

local otherContent = Instance.new("Frame", mainFrame)
otherContent.Size = UDim2.new(1, -100, 1, -30)
otherContent.Position = UDim2.new(0, 100, 0, 30)
otherContent.BackgroundColor3 = Color3.fromRGB(40, 40, 70)
otherContent.Visible = false  -- Initially hidden

-- Row container (Money UI)
local rowFrame = Instance.new("Frame", mainContent)
rowFrame.Size = UDim2.new(0.9, 0, 0.2, 0)
rowFrame.Position = UDim2.new(0.05, 0, 0.1, 0)
rowFrame.BackgroundTransparency = 1

local moneyInput = Instance.new("TextBox", rowFrame)
moneyInput.Size = UDim2.new(0.48, 0, 1, 0)
moneyInput.Position = UDim2.new(0, 0, 0, 0)
moneyInput.PlaceholderText = "$ $ $ $"
moneyInput.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
moneyInput.BackgroundTransparency = 0.5
moneyInput.TextColor3 = Color3.fromRGB(0, 0, 0)
moneyInput.TextScaled = true

local moneyButton = Instance.new("TextButton", rowFrame)
moneyButton.Size = UDim2.new(0.48, 0, 1, 0)
moneyButton.Position = UDim2.new(0.52, 0, 0, 0)
moneyButton.Text = "Add Money"
moneyButton.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
moneyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
moneyButton.TextScaled = true

-- Infinite Yield Button (Other Tab)
local infiniteYieldButton = Instance.new("TextButton", otherContent)
infiniteYieldButton.Size = UDim2.new(0.9, 0, 0.15, 0)
infiniteYieldButton.Position = UDim2.new(0.05, 0, 0.1, 0)
infiniteYieldButton.Text = "Infinite Yield"
infiniteYieldButton.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
infiniteYieldButton.TextColor3 = Color3.fromRGB(255, 255, 255)
infiniteYieldButton.TextScaled = true

-- Load Infinite Yield when button is clicked
infiniteYieldButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
end)

-- Button Functions
moneyButton.MouseButton1Click:Connect(function()
    local amount = tonumber(moneyInput.Text) or 0
    if amount > 0 then
        game:GetService("ReplicatedStorage").CratesUtilities.Remotes.GiveReward:FireServer(amount)
    end
end)

-- Tab Switching
mainButton.MouseButton1Click:Connect(function()
    mainContent.Visible = true
    otherContent.Visible = false
end)

otherButton.MouseButton1Click:Connect(function()
    mainContent.Visible = false
    otherContent.Visible = true
end)
