local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local MinimizeButton = Instance.new("TextButton")
local CloseButton = Instance.new("TextButton")
local MoneyHackButton = Instance.new("TextButton")
local ShopHackButton = Instance.new("TextButton")

-- Setup GUI Properties
ScreenGui.Parent = game.CoreGui
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Size = UDim2.new(0, 250, 0, 200)
Frame.Position = UDim2.new(0.5, -125, 0.4, 0)
Frame.Active = true
Frame.Draggable = true

-- Close Button
CloseButton.Parent = Frame
CloseButton.Text = "X"
CloseButton.Size = UDim2.new(0, 25, 0, 25)
CloseButton.Position = UDim2.new(1, -30, 0, 5)
CloseButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Minimize Button
MinimizeButton.Parent = Frame
MinimizeButton.Text = "-"
MinimizeButton.Size = UDim2.new(0, 25, 0, 25)
MinimizeButton.Position = UDim2.new(1, -60, 0, 5)
MinimizeButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
MinimizeButton.MouseButton1Click:Connect(function()
    Frame.Visible = not Frame.Visible
end)

-- Money Hack Button
MoneyHackButton.Parent = Frame
MoneyHackButton.Text = "Money Hack"
MoneyHackButton.Size = UDim2.new(0, 200, 0, 50)
MoneyHackButton.Position = UDim2.new(0.1, 0, 0.3, 0)
MoneyHackButton.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
MoneyHackButton.MouseButton1Click:Connect(function()
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local GiveBonus = ReplicatedStorage.Events.GiveBonus
    local CoinsBonus = ReplicatedStorage.Events.CoinsBonus
    GiveBonus:FireServer(math.random(1000, 5000))
    CoinsBonus:FireServer(math.random(1000, 5000))
end)

-- Shop Hack Button
ShopHackButton.Parent = Frame
ShopHackButton.Text = "Shop Hack"
ShopHackButton.Size = UDim2.new(0, 200, 0, 50)
ShopHackButton.Position = UDim2.new(0.1, 0, 0.6, 0)
ShopHackButton.BackgroundColor3 = Color3.fromRGB(0, 0, 200)
ShopHackButton.MouseButton1Click:Connect(function()
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local BuyEvent = ReplicatedStorage.Events.Buy
    local EquipTrail = ReplicatedStorage.Events.EquipTrail
    local itemID = "BigRocketLauncher"
    BuyEvent:FireServer(itemID)
    EquipTrail:FireServer(itemID)
end)
