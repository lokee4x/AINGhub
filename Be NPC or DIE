Feature2.Name = "Feature2"
Feature2.Parent = MainFrame
Feature2.BackgroundColor3 = Color3.fromRGB(180, 80, 80)
Feature2.Size = UDim2.new(0.8, 0, 0, 40)
Feature2.Position = UDim2.new(0.1, 0, 0.55, 0)
